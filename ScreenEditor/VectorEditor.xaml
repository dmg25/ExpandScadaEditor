<UserControl x:Class="ExpandScadaEditor.ScreenEditor.VectorEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExpandScadaEditor.ScreenEditor"
             xmlns:items="clr-namespace:ExpandScadaEditor.ScreenEditor.Items"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             >
    <UserControl.Resources>
        <local:VectorEditorVM x:Key="ViewModel" />
        <local:ItemsTemplateSelector x:Key="ItemsTemplateSelector" />
    </UserControl.Resources>
    <Grid DataContext="{StaticResource ViewModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="50" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition MinWidth="50"/>
        </Grid.ColumnDefinitions>

        <ListView Grid.Column="0"
                ItemsSource="{Binding Items}" 
                ItemTemplateSelector="{StaticResource ItemsTemplateSelector}">  <!--ItemTemplateSelector="{DynamicResource ItemsTemplateSelector}"-->
                
        </ListView>
        
        <GridSplitter Grid.Column="1"
              HorizontalAlignment="Center"
              VerticalAlignment="Stretch"
              Background="White" 
              ShowsPreview="True"
              Width="5"
              />


        <Canvas x:Name="WorkSpace" Grid.Column="2" AllowDrop="True" Background="Transparent"
                MouseMove="WorkSpace_MouseMove"
                PreviewMouseLeftButtonUp="Element_PreviewMouseLeftButtonUp">

            <Border  BorderThickness="0.1" BorderBrush="Black" Canvas.Top="100" Canvas.Left="55" Width="100" Height="123"/>

            <TextBlock Canvas.Left="10" Canvas.Bottom="60" Text="{Binding MouseX}"/>
            <TextBlock Canvas.Left="10" Canvas.Bottom="40" Text="{Binding MouseY}"/>
            <TextBlock Canvas.Left="10" Canvas.Bottom="20" Text="{Binding MouseOverElement}"/>
        </Canvas>
        
        
        <GridSplitter Grid.Column="3"
              HorizontalAlignment="Center"
              VerticalAlignment="Stretch"
              Background="White" 
              ShowsPreview="True"
              Width="5"
              />
        
        
    </Grid>
</UserControl>
